{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es2015"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "umd",
    "moduleResolution": "node",
    "noEmit": false,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/test.ts"]
}
